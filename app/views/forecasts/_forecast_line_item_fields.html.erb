<div class="line-item border rounded p-4 mb-4">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= form.label :name, "Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "e.g., Forecast, Rozliczenie" %>
    </div>
    <div>
      <%= form.label :amount, "Amount", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.number_field :amount, step: 0.01, value: form.object.amount || 0, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div>
      <%= form.label :due_date, "Due Date", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :due_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <%= form.check_box :_destroy, class: "hidden" %>
      <button type="button" data-action="click->nested-form#remove" class="text-red-600 hover:text-red-800 mt-2">Remove</button>
    </div>
  </div>
</div>
