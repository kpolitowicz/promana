<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Forecast - <%= @forecast.issued_date.strftime('%B %d, %Y') %></h1>
      <p class="mt-1 text-sm text-gray-500">
        Utility Provider: <%= link_to @utility_provider.name, property_utility_provider_path(@property, @utility_provider), class: "text-blue-600 hover:text-blue-800" %>
      </p>
      <p class="mt-1 text-sm text-gray-500">
        Property: <%= link_to @property.name, property_path(@property), class: "text-blue-600 hover:text-blue-800" %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Edit", edit_property_utility_provider_forecast_path(@property, @utility_provider, @forecast), class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Delete", property_utility_provider_forecast_path(@property, @utility_provider, @forecast), method: :delete, data: {confirm: "Are you sure?"}, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", property_utility_provider_path(@property, @utility_provider), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Line Items</h2>
    <% if @forecast.forecast_line_items.any? %>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @forecast.forecast_line_items.each do |line_item| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= line_item.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">$<%= number_with_precision(line_item.amount, precision: 2) %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= line_item.due_date.strftime('%B %d, %Y') %></td>
              </tr>
            <% end %>
            <tr class="bg-gray-50 font-bold">
              <td class="px-6 py-4 whitespace-nowrap text-sm">Total</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">$<%= number_with_precision(@forecast.forecast_line_items.sum(:amount), precision: 2) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm"></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">No line items yet.</p>
    <% end %>
  </div>
</div>
