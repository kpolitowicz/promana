<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">New Forecast for <%= @utility_provider.name %></h1>
  </div>

  <%= form_with(model: [@property, @utility_provider, @forecast], local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if @forecast.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@forecast.errors.count, "error") %> prohibited this forecast from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @forecast.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :issued_date, "Issued Date", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :issued_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">Line Items</h3>
      <div id="line-items">
        <%= form.fields_for :forecast_line_items do |line_item_form| %>
          <div class="line-item border rounded p-4 mb-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <%= line_item_form.label :name, "Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= line_item_form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "e.g., Forecast, Rozliczenie" %>
              </div>
              <div>
                <%= line_item_form.label :amount, "Amount", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= line_item_form.number_field :amount, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
              </div>
              <div>
                <%= line_item_form.label :due_date, "Due Date", class: "block text-gray-700 text-sm font-bold mb-2" %>
                <%= line_item_form.date_field :due_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
              </div>
            </div>
            <%= line_item_form.check_box :_destroy, class: "hidden" %>
          </div>
        <% end %>
      </div>
      <button type="button" id="add-line-item" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mt-2">
        Add Line Item
      </button>
    </div>

    <div class="flex items-center gap-2">
      <%= form.submit "Create Forecast", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Cancel", property_utility_provider_path(@property, @utility_provider), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const lineItemsContainer = document.getElementById('line-items');
    const addButton = document.getElementById('add-line-item');
    let lineItemIndex = <%= @forecast.forecast_line_items.size %>;

    addButton.addEventListener('click', function() {
      const newLineItem = document.createElement('div');
      newLineItem.className = 'line-item border rounded p-4 mb-4';
      newLineItem.innerHTML = `
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Name</label>
            <input type="text" name="forecast[forecast_line_items_attributes][${lineItemIndex}][name]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="e.g., Forecast, Rozliczenie">
          </div>
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Amount</label>
            <input type="number" step="0.01" name="forecast[forecast_line_items_attributes][${lineItemIndex}][amount]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Due Date</label>
            <input type="date" name="forecast[forecast_line_items_attributes][${lineItemIndex}][due_date]" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            <button type="button" class="remove-line-item text-red-600 hover:text-red-800 mt-2">Remove</button>
          </div>
        </div>
      `;
      lineItemsContainer.appendChild(newLineItem);
      lineItemIndex++;

      newLineItem.querySelector('.remove-line-item').addEventListener('click', function() {
        newLineItem.remove();
      });
    });

    document.querySelectorAll('.remove-line-item').forEach(function(button) {
      button.addEventListener('click', function() {
        this.closest('.line-item').remove();
      });
    });
  });
</script>
