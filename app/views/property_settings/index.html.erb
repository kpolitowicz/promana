<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Property Settings</h1>
    <%= link_to "New Property", new_property_setting_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @properties.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @properties.each do |property| %>
          <li>
            <%= link_to property_setting_path(property), class: "block hover:bg-gray-50" do %>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <p class="text-sm font-medium text-blue-600 truncate">
                    <%= property.name %>
                  </p>
                </div>
                <% if property.address.present? %>
                  <div class="mt-2">
                    <p class="text-sm text-gray-500">
                      <%= property.address %>
                    </p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500">No properties yet. <%= link_to "Create one", new_property_setting_path, class: "text-blue-600 hover:text-blue-800" %> to get started.</p>
    </div>
  <% end %>
</div>

