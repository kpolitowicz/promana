<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Tenants</h1>
    <%= link_to "New Tenant", new_tenant_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @tenants.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @tenants.each do |tenant| %>
          <li>
            <%= link_to tenant_path(tenant), class: "block hover:bg-gray-50" do %>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <p class="text-sm font-medium text-blue-600 truncate">
                    <%= tenant.name %>
                  </p>
                </div>
                <% if tenant.email.present? || tenant.phone.present? %>
                  <div class="mt-2 text-sm text-gray-500">
                    <%= tenant.email %> <%= tenant.phone %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500">No tenants yet. <%= link_to "Create one", new_tenant_path, class: "text-blue-600 hover:text-blue-800" %> to get started.</p>
    </div>
  <% end %>
</div>
