<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @tenant.name %></h1>
      <% if @tenant.email.present? || @tenant.phone.present? %>
        <div class="mt-1 text-sm text-gray-500">
          <%= @tenant.email %> <%= @tenant.phone %>
        </div>
      <% end %>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Edit", edit_tenant_path(@tenant), class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "Delete", tenant_path(@tenant), method: :delete, data: { turbo_confirm: "Are you sure you want to delete '#{@tenant.name}'? This action cannot be undone." }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", tenants_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
