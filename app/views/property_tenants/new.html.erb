<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Assign Tenant to <%= @property.name %></h1>
  </div>

  <%= form_with(model: [@property, @property_tenant], local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if @property_tenant.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@property_tenant.errors.count, "error") %> prohibited this tenant assignment from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @property_tenant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :tenant_id, "Tenant", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.collection_select :tenant_id, @available_tenants, :id, :name, {prompt: "Select a tenant"}, {class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"} %>
    </div>

    <div class="mb-4">
      <%= form.label :rent_amount, "Rent Amount", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.number_field :rent_amount, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center gap-2">
      <%= form.submit "Assign Tenant", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Cancel", @property, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
