<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Payslip - <%= @payslip.month.strftime('%B %Y') %></h1>
      <p class="mt-1 text-sm text-gray-500">
        Tenant: <%= @property_tenant.tenant.name %> | Property: <%= link_to @property.name, property_path(@property), class: "text-blue-600 hover:text-blue-800" %>
      </p>
      <p class="mt-1 text-sm text-gray-500">
        Due Date: <%= @payslip.due_date.strftime('%B %d, %Y') %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <div data-controller="clipboard">
        <textarea data-clipboard-target="source" class="hidden"><%= @payslip.to_ascii_text(@property, @property_tenant.tenant) %></textarea>
        <button 
          type="button"
          data-action="click->clipboard#copy"
          class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Copy as Text
        </button>
      </div>
      <%= link_to "Delete", property_property_tenant_payslip_path(@property, @property_tenant, @payslip), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", property_property_tenant_payslips_path(@property, @property_tenant), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= Payslip.name_header %></th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"><%= Payslip.amount_header %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @payslip.payslip_line_items.each do |line_item| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= line_item.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right"><%= format_currency(line_item.amount) %></td>
            </tr>
          <% end %>
          <tr class="bg-gray-50 font-bold">
            <td class="px-6 py-4 whitespace-nowrap text-sm"><%= Payslip.total_header %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-right"><%= format_currency(@payslip.total_amount) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
