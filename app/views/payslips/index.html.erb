<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Payslips</h1>
      <p class="mt-1 text-sm text-gray-500">
        Tenant: <%= @property_tenant.tenant.name %> | Property: <%= link_to @property.name, property_path(@property), class: "text-blue-600 hover:text-blue-800" %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Generate New Payslip", new_property_property_tenant_payslip_path(@property, @property_tenant), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", property_path(@property), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <% if @payslips.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Month</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @payslips.each do |payslip| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= payslip.month.strftime('%B %Y') %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= payslip.due_date.strftime('%B %d, %Y') %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= format_currency(payslip.total_amount) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "View", property_property_tenant_payslip_path(@property, @property_tenant, payslip), class: "text-blue-600 hover:text-blue-800 mr-4" %>
                <%= link_to "Delete", property_property_tenant_payslip_path(@property, @property_tenant, payslip), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-500">No payslips yet. <%= link_to "Generate one", new_property_property_tenant_payslip_path(@property, @property_tenant), class: "text-blue-600 hover:text-blue-800" %> to get started.</p>
  <% end %>
</div>
