<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @utility_provider.name %></h1>
      <p class="mt-1 text-sm text-gray-500">Property: <%= link_to @property.name, property_path(@property), class: "text-blue-600 hover:text-blue-800" %></p>
      <p class="mt-1 text-sm text-gray-500">Forecast Behavior: <%= @utility_provider.forecast_behavior.humanize %></p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Edit", edit_property_utility_provider_path(@property, @utility_provider), class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Delete", property_utility_provider_path(@property, @utility_provider), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", property_path(@property), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Utility Types</h2>
    <% if @utility_provider.utility_types.any? %>
      <ul class="bg-white shadow rounded-lg divide-y">
        <% @utility_provider.utility_types.order(:name).each do |utility_type| %>
          <li class="py-3 px-4">
            <span class="font-medium text-gray-900"><%= utility_type.name %></span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No utility types assigned.</p>
    <% end %>
  </div>

  <div class="mt-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-900">Forecasts</h2>
      <%= link_to "Add Forecast", new_property_utility_provider_forecast_path(@property, @utility_provider), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <% if @utility_provider.forecasts.any? %>
      <ul class="bg-white shadow rounded-lg divide-y">
        <% @utility_provider.forecasts.order(issued_date: :desc).each do |forecast| %>
          <li class="py-3 px-4 flex justify-between items-center">
            <div>
              <%= link_to "Forecast #{forecast.issued_date.strftime('%Y-%m-%d')}", property_utility_provider_forecast_path(@property, @utility_provider, forecast), class: "font-medium text-blue-600 hover:text-blue-800" %>
              <span class="text-sm text-gray-500 ml-2">
                <%= pluralize(forecast.forecast_line_items.count, 'line item') %>
              </span>
            </div>
            <%= button_to "Delete", property_utility_provider_forecast_path(@property, @utility_provider, forecast), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 leading-none inline-block bg-transparent border-0 p-0 cursor-pointer font-normal", form_class: "inline" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No forecasts yet.</p>
    <% end %>
  </div>

  <div class="mt-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-900">Payments</h2>
      <%= link_to "Add Payment", new_property_utility_provider_utility_payment_path(@property, @utility_provider), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
    <div class="mb-4">
      <%= link_to "View All Payments", property_utility_provider_utility_payments_path(@property, @utility_provider), class: "text-blue-600 hover:text-blue-800" %>
    </div>
  </div>
</div>
