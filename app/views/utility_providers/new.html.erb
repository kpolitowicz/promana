<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">New Utility Provider for <%= @property.name %></h1>
  </div>

  <%= form_with(model: [@property, @utility_provider], url: property_setting_utility_providers_path(@property), local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if @utility_provider.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@utility_provider.errors.count, "error") %> prohibited this utility provider from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @utility_provider.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, "Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">Utility Types</label>
      <div class="space-y-2">
        <% @utility_types.each do |utility_type| %>
          <div class="flex items-center">
            <%= check_box_tag "utility_provider[utility_type_ids][]", utility_type.id, false, id: "utility_type_#{utility_type.id}", class: "mr-2" %>
            <%= label_tag "utility_type_#{utility_type.id}", utility_type.name, class: "text-gray-700" %>
          </div>
        <% end %>
      </div>
      <% if @utility_types.empty? %>
        <p class="text-sm text-gray-500 mt-2">
          No utility types available. <%= link_to "Create one", new_utility_type_path, class: "text-blue-600 hover:text-blue-800" %> first.
        </p>
      <% end %>
    </div>

    <div class="flex items-center gap-2">
      <%= form.submit "Create Utility Provider", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Cancel", property_setting_path(@property), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
