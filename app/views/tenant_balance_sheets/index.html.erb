<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Balance Sheet</h1>
      <p class="mt-1 text-sm text-gray-500">
        Tenant: <%= @property_tenant.tenant.name %> | Property: <%= link_to @property.name, property_path(@property), class: "text-blue-600 hover:text-blue-800" %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <%= button_to "Update", update_all_property_property_tenant_tenant_balance_sheets_path(@property, @property_tenant), method: :patch, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", property_path(@property), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mb-6 p-4 bg-white shadow rounded-lg">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-bold text-gray-900">Current Balance</h2>
      <span class="text-2xl font-bold <%= @current_balance == 0 ? 'text-green-600' : @current_balance > 0 ? 'text-red-600' : 'text-black' %>">
        <% if @current_balance > 0 %>
          -<%= format_currency(@current_balance) %>
        <% else %>
          <%= format_currency(@current_balance.abs) %>
        <% end %>
      </span>
    </div>
    <% if @current_balance != 0 %>
      <p class="mt-2 text-sm text-gray-500">
        <%= @current_balance > 0 ? "Tenant owes" : "Tenant has credit of" %> <%= format_currency(@current_balance.abs) %>
      </p>
    <% else %>
      <p class="mt-2 text-sm text-green-600">All accounts are balanced.</p>
    <% end %>
  </div>

  <% if @balance_sheets.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Month</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Owed</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paid</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Balance</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @balance_sheets.each do |balance_sheet| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= balance_sheet.month.strftime('%B %Y') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= balance_sheet.due_date.strftime('%B %d, %Y') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= format_currency(balance_sheet.owed) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= format_currency(balance_sheet.paid) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium <%= balance_sheet.balance == 0 ? 'text-green-600' : balance_sheet.balance > 0 ? 'text-red-600' : 'text-black' %>">
                <% if balance_sheet.balance > 0 %>
                  -<%= format_currency(balance_sheet.balance) %>
                <% else %>
                  <%= format_currency(balance_sheet.balance.abs) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-8 text-center">
      <p class="text-gray-500">No balance sheet entries yet. Click "Update" to generate balance sheet entries.</p>
    </div>
  <% end %>
</div>
