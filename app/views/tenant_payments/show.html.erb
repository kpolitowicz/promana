<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Payment - <%= @tenant_payment.paid_date.strftime('%B %d, %Y') %></h1>
      <p class="mt-1 text-sm text-gray-500">
        Tenant: <%= @property_tenant.tenant.name %> | Property: <%= link_to @property.name, property_path(@property), class: "text-blue-600 hover:text-blue-800" %>
      </p>
      <p class="mt-1 text-sm text-gray-500">
        Paid Date: <%= @tenant_payment.paid_date.strftime('%B %d, %Y') %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Edit", edit_property_property_tenant_tenant_payment_path(@property, @property_tenant, @tenant_payment), class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "Delete", property_property_tenant_tenant_payment_path(@property, @property_tenant, @tenant_payment), method: :delete, data: {confirm: "Are you sure?"}, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", property_property_tenant_tenant_payments_path(@property, @property_tenant), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <dl class="divide-y divide-gray-200">
        <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Paid Date</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @tenant_payment.paid_date.strftime('%B %d, %Y') %></dd>
        </div>
        <div class="px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Amount</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= format_currency(@tenant_payment.amount) %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>
