<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Tenant Payments</h1>
      <p class="mt-1 text-sm text-gray-500">
        Tenant: <%= @property_tenant.tenant.name %> | Property: <%= link_to @property.name, property_path(@property), class: "text-blue-600 hover:text-blue-800" %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Add Payment", new_property_property_tenant_tenant_payment_path(@property, @property_tenant), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back", property_path(@property), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <% if @tenant_payments.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paid Date</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @tenant_payments.each do |payment| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= payment.paid_date.strftime('%B %d, %Y') %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right"><%= format_currency(payment.amount) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "View", property_property_tenant_tenant_payment_path(@property, @property_tenant, payment), class: "text-blue-600 hover:text-blue-800 mr-4" %>
                <%= link_to "Edit", edit_property_property_tenant_tenant_payment_path(@property, @property_tenant, payment), class: "text-gray-600 hover:text-gray-800 mr-4" %>
                <%= button_to "Delete", property_property_tenant_tenant_payment_path(@property, @property_tenant, payment), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 leading-none inline-block bg-transparent border-0 p-0 cursor-pointer font-normal" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-500">No payments yet. <%= link_to "Add one", new_property_property_tenant_tenant_payment_path(@property, @property_tenant), class: "text-blue-600 hover:text-blue-800" %> to get started.</p>
  <% end %>
</div>
