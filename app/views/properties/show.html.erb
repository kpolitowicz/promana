<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @property.name %></h1>
      <% if @property.address.present? %>
        <p class="mt-1 text-sm text-gray-500"><%= @property.address %></p>
      <% end %>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Back", properties_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Tenants</h2>

    <% if @property_tenants.any? %>
      <ul class="bg-white shadow rounded-lg divide-y">
        <% @property_tenants.each do |property_tenant| %>
          <li class="py-3 px-4 flex justify-between items-center">
            <div>
              <span class="font-medium text-gray-900"><%= property_tenant.tenant.name %></span>
              <span class="text-sm text-gray-500 ml-2">Rent: <%= format_currency(property_tenant.rent_amount) %></span>
            </div>
            <div class="flex items-center gap-2">
              <%= link_to "Payslips", property_property_tenant_payslips_path(@property, property_tenant), class: "text-blue-600 hover:text-blue-800 leading-none inline-block" %>
              <%= link_to "Payments", property_property_tenant_tenant_payments_path(@property, property_tenant), class: "text-blue-600 hover:text-blue-800 leading-none inline-block" %>
              <%= link_to "Balance Sheet", property_property_tenant_tenant_balance_sheets_path(@property, property_tenant), class: "text-blue-600 hover:text-blue-800 leading-none inline-block" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No tenants assigned yet.</p>
    <% end %>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Utility Providers</h2>

    <% if @property.utility_providers.any? %>
      <ul class="bg-white shadow rounded-lg divide-y">
        <% @property.utility_providers.order(:name).each do |provider| %>
          <li class="py-3 px-4 flex justify-between items-center">
            <div>
              <span class="font-medium text-gray-900"><%= provider.name %></span>
              <span class="text-sm text-gray-500 ml-2">(<%= provider.forecast_behavior.humanize %>)</span>
            </div>
            <div class="flex items-center gap-2">
              <%= link_to "Forecasts", property_utility_provider_forecasts_path(@property, provider), class: "text-blue-600 hover:text-blue-800 leading-none inline-block" %>
              <%= link_to "Payments", property_utility_provider_utility_payments_path(@property, provider), class: "text-blue-600 hover:text-blue-800 leading-none inline-block" %>
              <%= link_to "Balance Sheet", property_utility_provider_utility_provider_balance_sheets_path(@property, provider), class: "text-blue-600 hover:text-blue-800 leading-none inline-block" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No utility providers yet.</p>
    <% end %>
  </div>
</div>
