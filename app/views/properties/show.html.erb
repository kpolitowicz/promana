<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @property.name %></h1>
      <% if @property.address.present? %>
        <p class="mt-1 text-sm text-gray-500"><%= @property.address %></p>
      <% end %>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Edit", edit_property_path(@property), class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "Delete", property_path(@property), method: :delete, data: {confirm: "Are you sure?"}, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded border-0 cursor-pointer" %>
      <%= link_to "Back", properties_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-900">Tenants</h2>
      <%= link_to "Assign Tenant", new_property_property_tenant_path(@property), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <% if @property_tenants.any? %>
      <ul class="bg-white shadow rounded-lg divide-y">
        <% @property_tenants.each do |property_tenant| %>
          <li class="py-3 px-4 flex justify-between items-center">
            <div>
              <span class="font-medium text-gray-900"><%= property_tenant.tenant.name %></span>
              <span class="text-sm text-gray-500 ml-2">Rent: <%= format_currency(property_tenant.rent_amount) %></span>
            </div>
            <div class="flex items-center gap-2">
              <%= link_to "Payslips", property_property_tenant_payslips_path(@property, property_tenant), class: "text-blue-600 hover:text-blue-800 leading-none inline-block" %>
              <%= link_to "Payments", property_property_tenant_tenant_payments_path(@property, property_tenant), class: "text-blue-600 hover:text-blue-800 leading-none inline-block" %>
              <%= button_to "Remove", property_property_tenant_path(@property, property_tenant), method: :delete, data: {confirm: "Are you sure?"}, class: "text-red-600 hover:text-red-800 leading-none inline-block border-0 bg-transparent cursor-pointer p-0" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No tenants assigned yet.</p>
    <% end %>
  </div>

  <div class="mt-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-900">Utility Providers</h2>
      <%= link_to "Add Utility Provider", new_property_utility_provider_path(@property), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <% if @property.utility_providers.any? %>
      <ul class="bg-white shadow rounded-lg divide-y">
        <% @property.utility_providers.order(:name).each do |provider| %>
          <li class="py-3 px-4 flex justify-between items-center">
            <div>
              <%= link_to provider.name, property_utility_provider_path(@property, provider), class: "font-medium text-blue-600 hover:text-blue-800" %>
              <span class="text-sm text-gray-500 ml-2">(<%= provider.forecast_behavior.humanize %>)</span>
            </div>
            <%= button_to "Remove", property_utility_provider_path(@property, provider), method: :delete, data: {confirm: "Are you sure?"}, class: "text-red-600 hover:text-red-800 leading-none inline-block border-0 bg-transparent cursor-pointer p-0" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No utility providers yet.</p>
    <% end %>
  </div>
</div>
